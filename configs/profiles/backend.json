{
  "model": "claude-3-5-sonnet-20241022",
  "review_rules": {
    "check_tests": true,
    "check_documentation": true,
    "check_security": true,
    "check_performance": true,
    "min_test_coverage": 85,
    "max_complexity": 12,
    "max_function_length": 60
  },
  "security_rules": {
    "check_sql_injection": true,
    "check_xss": true,
    "check_auth": true,
    "check_input_validation": true,
    "check_secrets": true,
    "check_crypto": true
  },
  "documentation_rules": {
    "require_function_docs": true,
    "require_class_docs": true,
    "require_readme_update": false,
    "check_code_comments": true
  },
  "response_settings": {
    "max_response_length": 3000,
    "include_code_examples": true,
    "include_line_numbers": true,
    "tone": "technical"
  },
  "language_specific": {
    "python": {
      "version": "3.11",
      "check_pep8": true,
      "check_type_hints": true
    },
    "go": {
      "check_gofmt": true,
      "check_golint": true
    },
    "rust": {
      "check_clippy": true,
      "check_rustfmt": true
    }
  },
  "exclusions": {
    "file_patterns": [
      "vendor/**",
      "*.min.js",
      "dist/**",
      "build/**",
      "coverage/**",
      "target/**",
      "*.pyc",
      "__pycache__/**"
    ],
    "directory_patterns": [
      "vendor/",
      ".git/",
      "coverage/",
      "target/",
      "__pycache__/",
      "venv/",
      ".env/"
    ]
  }
}