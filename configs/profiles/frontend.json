{
  "model": "claude-3-5-sonnet-20241022",
  "review_rules": {
    "check_tests": true,
    "check_documentation": true,
    "check_security": true,
    "check_performance": true,
    "min_test_coverage": 75,
    "max_complexity": 8,
    "max_function_length": 40
  },
  "security_rules": {
    "check_sql_injection": false,
    "check_xss": true,
    "check_auth": true,
    "check_input_validation": true,
    "check_secrets": true,
    "check_crypto": false
  },
  "documentation_rules": {
    "require_function_docs": true,
    "require_class_docs": true,
    "require_readme_update": true,
    "check_code_comments": true
  },
  "response_settings": {
    "max_response_length": 2500,
    "include_code_examples": true,
    "include_line_numbers": true,
    "tone": "friendly"
  },
  "language_specific": {
    "typescript": {
      "strict_mode": true,
      "check_types": true
    },
    "javascript": {
      "es_version": "es2022",
      "use_strict": true
    }
  },
  "exclusions": {
    "file_patterns": [
      "node_modules/**",
      "*.min.js",
      "*.min.css",
      "dist/**",
      "build/**",
      "coverage/**",
      ".next/**",
      "out/**",
      "public/static/**",
      "*.bundle.js"
    ],
    "directory_patterns": [
      "vendor/",
      ".git/",
      "coverage/",
      ".next/",
      ".cache/",
      "node_modules/"
    ]
  }
}