{
  "name": "workflow-automation",
  "version": "1.0.0",
  "description": "Centralized GitHub workflow automation system for Ethereum Identity Kit",
  "module": "index.ts",
  "type": "module",
  "scripts": {
    "dev": "bun run --hot index.ts",
    "build": "bun build index.ts --outdir ./dist --target node",
    "test": "bun test",
    "lint": "bun run eslint .",
    "format": "bun run prettier --write .",
    "validate-config": "bun run scripts/config-validator.ts",
    "validate-workflows": "bun run validate-workflow-syntax.ts",
    "check-versions": "bun run scripts/version-check.ts",
    "propagate-updates": "bun run scripts/update-propagation.ts",
    "test-prompts": "bun test prompts/",
    "setup": "bun install && bun run validate-config"
  },
  "dependencies": {
    "@octokit/auth-app": "^6.0.1",
    "@octokit/rest": "^20.0.2",
    "ajv": "^8.12.0"
  },
  "devDependencies": {
    "@types/bun": "latest",
    "@types/node": "^20.0.0",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "typescript": "^5.0.0"
  },
  "peerDependencies": {
    "typescript": "^5.0.0"
  },
  "keywords": [
    "github-actions",
    "workflow-automation", 
    "ai-code-review",
    "centralized-workflows",
    "anthropic-claude"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/ethereumidentitykit/workflow-automation.git"
  },
  "license": "MIT"
}